import SwiftUI
import UIKit

// Step 1: Create a SwiftUI wrapper for UIActivityViewController
struct ActivityViewController: UIViewControllerRepresentable {
    let items: [Any]
    
    func makeUIViewController(context: Context) -> UIActivityViewController {
        return UIActivityViewController(activityItems: items, applicationActivities: nil)
    }
    
    func updateUIViewController(_ uiViewController: UIActivityViewController, context: Context) {}
}

struct ContentView: View {
    let image = UIImage(named: "yourImageName.png")!
    let text = "This is a header message or description for your image"
    
    @State private var showActivityView = false
    
    var body: some View {
        VStack {
            Button("Share") {
                showActivityView.toggle()
            }
            .sheet(isPresented: $showActivityView) {
                // Step 2: Pass the items to be shared (text + image)
                ActivityViewController(items: [text, image])
            }
        }
    }
}

@main
struct MyApp: App {
    var body: some Scene {
        WindowGroup {
            ContentView()
        }
    }
}